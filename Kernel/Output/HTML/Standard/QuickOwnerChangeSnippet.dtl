                    <li class="$QData{"Class"}">
                        <form title="$Text{"QuickOwnerChange ticket"}" action="$Env{"CGIHandle"}" method="post">
                            <input type="hidden" name="Action" value="AgentTicketOwnerChangeBulk"/>
                            <input type="hidden" name="TicketID" value="$QData{"TicketID"}"/>
                            <label for="QuickOwnerChange" class="InvisibleText">$Text{"QuickOwnerChange"}:</label>
                            $Data{"Select"}
                        </form>
<!-- dtl:js_on_document_complete -->
<script type="text/javascript">//<![CDATA[
    $('#QuickOwnerChange').bind('change', function (Event) {
        var URL = Core.Config.Get('Baselink');
        var TID = $(this).val();

        var thisObject = $(this);

        if ( TID ) {
            thisObject.closest('form').submit();
        }
    });
//]]></script>
<!-- dtl:js_on_document_complete -->
                    </li>
